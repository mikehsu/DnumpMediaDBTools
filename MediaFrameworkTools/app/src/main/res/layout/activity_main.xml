<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Button android:id="@+id/btn_dump_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dump external storage table"
            android:layout_margin="5dp" />

        <Button android:id="@+id/btn_dump_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dump image info"
            android:layout_margin="5dp" />

        <Button android:id="@+id/btn_dump_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dump video info"
            android:layout_margin="5dp" />

        <Button android:id="@+id/btn_dump_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dump audio info"
            android:layout_margin="5dp" />

        <Button android:id="@+id/btn_test_nomedia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test nomedia"
            android:layout_margin="5dp" />

        <Button android:id="@+id/btn_test_ringtone_mgr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test RingtoneManager"
            android:layout_margin="5dp" />

        <Button android:id="@+id/btn_scan_otg_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan OTG file"
            android:layout_margin="5dp" />

        <TextView android:id="@+id/txt_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" />

    </LinearLayout>
</ScrollView>